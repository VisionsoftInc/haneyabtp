<mvc:View
    controllerName="haneya.controller.AiRPAConsignmentSalesOutput"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable">

    <Page title="Inter Company Sales Consignment">
        
        <!-- Toolbar with Refresh Button -->
        <headerContent>
            <Button
                text="Reprocess"
                press="onReprocessPress"/>
        </headerContent>
    <ScrollContainer
        horizontal="true">
        <!-- Table to display Function Import data -->
        <Table
            id="ConsignmentTable"
            inset="false"
            items="{
                path: 'ConsignmentModel>/records'}"
            width="auto"
            
          >

    <!-- Define Columns -->
    <columns >
        <Column width="4rem"><Text text="Select" visible="{= !${ui>/simulate} }"/></Column>
        <Column width="8rem"><Text text="ICON" visible="{= !${ui>/simulate} }"/></Column>
        <Column width="8rem"><Text text="SEL" visible="{= !${ui>/simulate} }"/></Column>
        <Column width="8rem"><Text text="MAIN_ID"/></Column>
        <Column width="8rem"><Text text="VBELN_SO" visible="{= !${ui>/simulate} }"/></Column>
        <Column width="8rem"><Text text="STATUS_SO" /></Column>
        <Column width="8rem"><Text text="VBELN_DL" visible="{= !${ui>/simulate} }"/></Column>
        <Column width="8rem"><Text text="STATUS_DL" visible="{= !${ui>/simulate} }"/></Column>
        <Column width="8rem"><Text text="BILLNO" visible="{= !${ui>/simulate} }"/></Column>
        <Column width="8rem"><Text text="STATUS_BL" visible="{= !${ui>/simulate} }"/></Column>
        <!-- <Column width="8rem"><Text text="CELLTAB"/></Column> -->
        <!-- <Column width="8rem"><Text text="GJAHR"/></Column>
        <Column width="10rem"><Text text="BUKRS"/></Column> -->
    </columns>

    <!-- Template for each row -->
    <ColumnListItem  type="{= ${ConsignmentModel>BILLNO} ? 'Inactive' : 'Active' }">
        <cells>
        <CheckBox selected="{ConsignmentModel>selected}" 
                      enabled="{= !${ConsignmentModel>BILLNO} }"
                      visible="{= !${ConsignmentModel>BILLNO} }" />
            <Text text="{ConsignmentModel>ICON}" visible="{= !${ui>/simulate} }"/>
            <Text text="{ConsignmentModel>SEL}" visible="{= !${ui>/simulate} }"/>
            <Text text="{ConsignmentModel>MAIN_ID}"/>
            <Text text="{ConsignmentModel>VBELN_SO}"  visible="{= !${ui>/simulate} }"/>
            <Text text="{ConsignmentModel>STATUS_SO}"/>
            <Text text="{ConsignmentModel>VBELN_DL}" visible="{= !${ui>/simulate} }"/>
            <Text text="{ConsignmentModel>STATUS_DL}" visible="{= !${ui>/simulate} }"/>
            <Text text="{ConsignmentModel>BILLNO}" visible="{= !${ui>/simulate} }"/>
            <Text text="{ConsignmentModel>STATUS_BL}" visible="{= !${ui>/simulate} }"/>
            <!-- <Text text="{ConsignmentModel>GJAHR}"/>
            <Text text="{ConsignmentModel>BUKRS}"/> -->
        </cells>
    </ColumnListItem>

    </Table>
</ScrollContainer>

    </Page>
</mvc:View>
