<mvc:View
 controllerName="haneya.controller.AiRPAHireToRetire"
 xmlns:mvc="sap.ui.core.mvc"
 	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
  xmlns="sap.m"
>
  <Page title="Hire To Retire"> 
   <VBox class="BigBox" justifyContent="Center">
            <Text text="Selection Criteria: " class="SelectionText"></Text>
            <VBox class="BigBox" alignItems="Start" justifyContent="Center">
            

            <HBox id="UploadFile"  class="filebox" alignItems="Center">
                <Label text="Upload File :" class="labelText"></Label>
                
                <l:VerticalLayout>
		               <u:FileUploader
		             	id="fileUploader1"
		             	name="myFileUpload"
                  change="onFileChange"
		             	uploadUrl="upload/"
			            tooltip="Upload your file to the local server"
			            uploadComplete="handleUploadComplete"/>
	
              	</l:VerticalLayout>
            </HBox>
        </VBox>
        
        </VBox>
        
        <!-- Footer -->
        <footer>
            <Toolbar class="footerToolbar">
                <ToolbarSpacer/>
                <Button text="Execute" type="Emphasized" press="handleUploadPress"/>
            </Toolbar>
        </footer>
       

  </Page>



</mvc:View>